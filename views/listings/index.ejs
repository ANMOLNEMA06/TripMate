<% layout("/layouts/boilerplate") %>

<!-- <h3>All Listings</h3> -->
<style>
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;   
  gap: 2.5rem;                          /* thoda jyada spacing */
  padding: 0.3rem 0;
  margin: 0.5rem 0;
  background: #fff;
  border-bottom: 1px solid #ddd;        /* soft grey line */
}

.filter {
  text-align: center;
  font-size: 0.85rem;                   /* text soft size */
  opacity: 0.9;
  cursor: pointer;
  transition: all 0.25s ease-in-out;
  color: #484848;                       /* Airbnb style text color */
}

.filter:hover {
  opacity: 1;
  transform: scale(1.05);               /* thoda zoom effect */
  color: #000;                          /* hover pe black text */
}

.filter i {
  font-size: 1.6rem;                    /* icons thode bade */
  margin-bottom: 0.4rem;
  color: #717171;                       /* default Airbnb grey */
  transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
}

.filter:hover i {
  color: #ff385c;                       /* Airbnb red/pink hover */
  transform: scale(1.2);
}

.tax-info {
  display: none;
  color: #717171;
  font-size: 0.8rem;
}

.tax-toggle {
  display: flex;
  align-items: center;
  gap: 0.4rem;                       /* switch aur text ke beech spacing */
  padding: 0.7rem 1rem;            /* chhoti padding */
  border: 1px solid #ddd;
  border-radius: 999px;              /* pill shape */
  background: #fff;
  font-size: 0.8rem;
  color: #484848;
  cursor: pointer;
  margin-left: auto;                 /* right side push */
}

.tax-toggle label {
  margin: 0;                         /* extra margin remove */
  font-weight: 1000;
  font-size: 0.8rem;
  white-space: nowrap;               /* text ek hi line me rahe */
}
</style>



 <div id="filters">
  <div class="filter">
<div><i class="fa-solid fa-fire"></i></div>
Trending
</div>
  <div class="filter">
<div><i class="fa-solid fa-bed"></i></div>
    Rooms
  </div>
  <div class="filter">
<div><i class="fa-solid fa-mountain-city"></i></div>
Iconic Cities
</div>
  <div class="filter">
<div><i class="fa-solid fa-mountain"></i></div>
    Mountains
  </div>
  <div class="filter">
<div><i class="fa-brands fa-fort-awesome"></i></div>
Castle
</div>
  <div class="filter">
<div><i class="fa-solid fa-person-swimming"></i></div>
    Amazing pools
  </div>
  <div class="filter">
<div><i class="fa-solid fa-campground"></i></div>
Camping
</div>
  <div class="filter">
<div><i class="fa-solid fa-cow"></i></div>
    Farms
  </div>
  <div class="filter">
<div><i class="fa-solid fa-snowflake"></i></div>
    Artic
  </div>
  <div class="filter">
<div><i class="fa-solid fa-igloo"></i></div>
Domes
</div>

  <div class="tax-toggle">
  <div class="form-check-reverse form-switch">
  <input
   class="form-check-input" 
   type="checkbox"
    role="switch" 
   id="flexSwitchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
</div>
</div>
 </div>

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3">

  <% for (let listing of allListings) { 
    if (listing._id) { %>
    <div class="card col lising-card">
      <a href="/listings/<%= listing._id %>">
        <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top" alt="listing_image" style="height:20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br/>
             ₹<%= listing.price.toLocaleString("en-IN") %> /night
             <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </a>
    </div>
  <% } else { %>
    <!-- Agar listing._id missing ho to skip ya show error -->
    <div class="card col bg-danger text-white">
      <div class="card-body">
        <p>⚠️ Error: Missing listing ID</p>
      </div>
    </div>
  <% } } %>
</div>


 <script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
let taxInfo= document.getElementsByClassName("tax-info");
for(info of taxInfo)
{
if(info.style.display != "inline")
{
  info.style.display = "inline";
}
else{
  info.style.display = "none";
}
}
  });
  </script>